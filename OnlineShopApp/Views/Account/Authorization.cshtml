@model Authorization
@{
    ViewData["Title"] = "Авторизация пользователя";
}

<div class="text-center text-uppercase text-success mb-5 mt-5">
    <h2 class="row-title">Вход</h2>
</div>
<form method="post">
    <div class="row justify-content-center mt-3">
        <div class="col-6 mb-3">
            <div asp-validation-summary="All" class="text-uppercase text-danger fw-bold"></div>
            <p>
                <label asp-for="Login" class="form-label"></label><br />
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </p>
            <p>
                <label asp-for="Password" class="form-label"></label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </p>
            <p>
                <label class="form-check-label">Запомнить меня</label>
                <input class="form-check-input" type="checkbox" value="true" name="IsRememberMe" />
            </p>
        </div>
    </div>
    <div class="text-center m-3">
        <button class="btn btn-outline-success" type="submit"
                asp-controller="Account"
                asp-action="Authorization">
            Войти
        </button>
    </div>
    <div class="text-center m-3">
        <a class="btn text-decoration-underline"
           asp-controller="Account"
           asp-action="Registration">
            Регистрация нового пользователя
        </a>
    </div>
</form>
