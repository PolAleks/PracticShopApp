@model Product
@{
    ViewData["Title"] = "Добавление товара";
}

<div class="text-center text-uppercase text-success mb-5 mt-5">
    <h2 class="row-title">Добавление нового товара</h2>
</div>
<form method="post">
    <div class="row justify-content-center mt-3">
        <div class="col-6 mb-3">
            <div asp-validation-summary="All" class="text-uppercase text-danger fw-bold"></div>
            <p>
                <label asp-for="Name" class="form-label"></label><br />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </p>
            <p>
                <label asp-for="Cost" class="form-label"></label><br />
                <input asp-for="Cost" class="form-control" type="number"/>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </p>
            <p>
                <label asp-for="Description" class="form-label"></label><br />
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </p>
        </div>
    </div>
    <div class="text-center m-3">
        <button class="btn btn-outline-success" type="submit"
                asp-controller="Admin"
                asp-action="AddProduct">
            Добавить
        </button>
    </div>
</form>